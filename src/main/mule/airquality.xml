{
	"appid" : vars.Key,
	"lat" : vars.Lat,
	"lon" : vars.Long
}]]]></http:query-params>
		</http:request>
					<error-handler >
						<on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" doc:id="ff78a567-03c0-4d1a-b344-5513b13c75b2" type="ANY">
